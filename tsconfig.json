{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "@components": [
                "src/app/shared/components"
            ],
            "@components/*": [
                "src/app/shared/components/*"
            ],
            "@shared/*": [
                "src/app/shared/*"
            ],
            "@assets/*": [
                "src/app/shared/assets/*"
            ],
            "@assets": [
                "src/app/shared/assets"
            ],
            "@app/*": [
                "src/app/*"
            ],
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}